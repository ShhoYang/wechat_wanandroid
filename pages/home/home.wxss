/* pages/home/home.wxss */

.container {
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  flex-direction: column;
}

.rgContainer {
  margin: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: space-between; */
  position: relative;
}

.radio {
  display: inline-block;
  text-align: center;
  margin-right: 32rpx;
  font-size: 14 pt;
}

.btnLogout {
  position: absolute;
  right: 0;
}

.codeContainer {
  height: 64rpx;
  margin: 0 32rpx 32rpx;
  background: white;
  display: flex;
  flex-direction: row;
}

.code {
  flex: 1;
  margin: auto 16rpx;
  font-size: 12pt;
}

.scan {
  width: 48rpx;
  height: 48rpx;
  margin: auto 16rpx auto 0;
}

.line {
  width: 100%;
  height: 1rpx;
  background: silver;
}

.grid {
  flex: 1;
  margin-top: 32rpx;
}

.gridItem {
  height: 25vw;
  width: 25%;
  float: left;
  position: relative;
}

.photo {
  width: 100%;
  height: 100%;
}

.delete {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 4rpx;
  right: 4rpx;
}

.bottom {
  margin: 32rpx;
}

.btnSubmit {
  margin-top: 32rpx;
}
