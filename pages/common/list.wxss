.listItem {
  margin: 24rpx;
  padding: 24rpx;
  text-align: center;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  box-shadow: 8rpx 8rpx 8rpx lightgray;
}

.listItemActive {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.title {
  display: block;
  font-size: 12pt;
  text-align: left;
  color: black;
}

.imageBig {
  margin-top: 24rpx;
  width: 50%;
  height: auto;
}

.bottom {
  height: 64rpx;
  position: relative;
  margin-top: 8rpx;
}

.info {
  position: absolute;
  right: 80rpx;
  bottom: 0;
  left: 0;
  display: flex;
  font-size: 10pt;
}

.author {
  color: #b2b2b2;
}

.time {
  flex: 1;
  text-align: left;
  color: #b2b2b2;
}

.link {
  color: #586c94;
  text-decoration: underline;
}

.linkActive {
  text-decoration: none;
}

.fav {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 64rpx;
  height: 64rpx;
}
