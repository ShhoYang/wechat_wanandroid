<view class='container'>
  <form bindsubmit='login' class='f'>
    <my-input name='username' class='username' lable='賬號' value='{{username}}' placeholder='請輸入賬號' bindchange='usernameInput' />
    <my-input name='password' class='password' lable='密碼' placeholder='請輸入密碼' password='true' bindchange='passwordInput' />
    <button type='primary' disabled='{{buttonDisabled}}' form-type='submit'>登錄</button>
  </form>

  <navigator class='register' url='../register/register'>沒有賬號,去註冊</navigator>
</view>