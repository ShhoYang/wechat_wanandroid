.cell {
  position: relative;
  display: flex;
  align-items: center;
  padding: 32rpx;
}

.cell:after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  left: 32rpx;
  height: 1px;
  background-color: lightgrey;
}

.left {
  flex: 1;
}

.right {
  color: gray;
  font-size: 10pt;
}

.avatar {
  overflow: hidden;
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
}

.line {
  width: 100%;
  height: 1px;
  background-color: lightgrey;
}

.line.bottom {
  margin-top: -1px;
}

#city {
  margin-left: 24rpx;
}
