.userInfo {
  display: flex;
  padding: 32rpx;
  background-color: #f8f8f8;
  align-items: center;
}

.avatar {
  overflow: hidden;
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
}

.username {
  flex: 1;
  margin: auto 16rpx;
}

.menu {
  margin-top: -1px;
}

.menuItem {
  position: relative;
  display: flex;
  padding: 32rpx;
  align-items: center;
}

.menuItemActive {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.menuItem:before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  left: 80rpx;
  height: 1px;
  background-color: lightgrey;
}

.menuIcon {
  width: 48rpx;
  height: 48rpx;
}

.menuText {
  flex: 1;
  font-size: 10pt;
  margin-left: 20rpx;
}

.menuArrow {
  height: 12rpx;
  width: 12rpx;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
}

.line {
  width: 100%;
  height: 1px;
  background-color: lightgrey;
}

button {
  position: relative;
  margin: 48rpx;
}
