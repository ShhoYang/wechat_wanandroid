.form {
  display: flex;
  background-color: #f0f0f0;
  align-items: center;
}

.input {
  flex: 1;
  margin: 16rpx;
  padding: 12rpx 28rpx;
  background-color: white;
  border-radius: 40rpx;
  font-size: 10pt;
}

.search {
  padding: 0 16rpx;
  margin-right: 16rpx;
  color: #1aad19;
}

.tip {
  font-size: 10pt;
  display: block;
  margin: 32rpx 0 16rpx 32rpx;
}

.hotKeys {
  margin: 12rpx;
}

.hotKey {
  display: inline-block;
  margin: 12rpx;
  padding: 2rpx 24rpx;
  font-size: 10pt;
  text-align: center;
  border-radius: 40rpx;
  color: #586c94;
  border: 1px solid #586c94;
}

.hotKeyActive {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}
