swiper {
  height: 50vw;
}

swiper image {
  width: 100%;
  height: 100%;
}

.list {
  background-color: #f0f0f0;
}

.listItem {
  margin: 24rpx;
  padding: 24rpx;
  text-align: center;
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 8rpx 8rpx 8rpx lightgray;
}

.listItemActive {
  background-color: #ececec;
}

.title {
  display: block;
  font-size: 12pt;
  text-align: left;
  color: black;
}

.imageBig {
  margin-top: 24rpx;
  width: 50%;
  height: auto;
  border-radius: 12rpx;
  border: 1rpx solid lightgray;
}

.bottom {
  display: flex;
  flex-direction: row;
  margin-top: 4rpx;
}

.linkIcon {
  width: 16px;
  height: 16px;
  margin: auto;
}

.time {
  flex: 1;
  text-align: left;
  color: #b2b2b2;
  font-size: 10pt;
}

.link {
  color: #586c94;
  font-size: 10pt;
  text-decoration: underline;
}

.linkActive {
  text-decoration: none;
}
