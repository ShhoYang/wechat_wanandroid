.list {
  background-color: #f0f0f0;
}

.listItem {
  margin: 24rpx;
  padding: 24rpx;
  background-color: white;
  text-align: center;
  border-radius: 12rpx;
  box-shadow: 8rpx 8rpx 8rpx lightgray;
}

.listItem text {
  display: block;
  font-size: 12pt;
  text-align: left;
  color: black;
}

.listItem image {
  margin-top: 24rpx;
  width: 50%;
  height: auto;
  border-radius: 12rpx;
  border: 1rpx solid lightgray;
}

