<view class='container'>
  <swiper id='banner' indicator-dots='true' autoplay='true' duration='1000' interval='5000'>
    <swiper-item wx:for='{{banner}}' wx:key='id'>
      <image src='{{item.imagePath}}' mode='scaleToFill' />
    </swiper-item>
  </swiper>

  <scroll-view class='list' scroll-y='true'>
    <view class='listItem' hover-class='listItemActive' wx:for='{{articles}}' wx:key='_id' bindtap='link' data-link='{{item.link}}'>
      <text class='title'>{{item.title}}</text>
      <image class='imageBig' src='{{item.envelopePic}}' mode='widthFix' />
      <view class='bottom'>
        <text class='time'>{{item.author}}    {{item.niceDate}}</text>
        <image class='linkIcon' src='../../images/link.png' mode='scaleToFill' catchtap='link' data-link='{{item.projectLink}}'></image>
        <view class='link' hover-class='linkActive' catchtap='link' data-link='{{item.projectLink}}'>項目鏈接</view>
      </view>
    </view>
  </scroll-view>

  <include src="../common/loadmore.wxml" />
</view>