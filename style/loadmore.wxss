.loadmore {
  width: 100%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation:weuiLoading  1s steps(12) infinite;
  animation:weuiLoading  1s steps(12) infinite;
}

.loadmoreLable {
  display: inline-block;
  vertical-align: middle;
}